<button {{on 'click' @click}} disabled={{disabled}} class="{{styleClass}} flex items-center justify-center rounded-xl h-32 w-32 md:w-52 md:h-52 bg-gradient-to-br relative">
    {{#if showClue}}
        <span class="flex h-3 w-3 absolute right-0 top-0">
            <span class="animate-ping absolute inline-flex h-6 w-6 rounded-full bg-purple-400 opacity-75"></span>
        </span>
    {{/if}}
    <img class="h-20 md:h-32 md:w-32 object-contain" src="{{imgSrc}}" alt="hand icon" draggable="false">
</button>